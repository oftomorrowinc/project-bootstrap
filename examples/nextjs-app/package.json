{
  "name": "nextjs-app",
  "version": "1.0.0",
  "description": "Next.js application with TypeScript, Firebase App Hosting, Dark Theme, and testing",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx src",
    "lint:fix": "eslint --ext .ts,.tsx,.js,.jsx src --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:unit": "jest",
    "test:e2e": "playwright test",
    "test:coverage": "jest --coverage",
    "ci": "npm run lint && npm run typecheck && npm run test",
    "deploy": "node scripts/deploy.js",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "firebase": "^11.8.0",
    "firebase-admin": "^13.4.0",
    "next": "^15.3.2",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@babel/preset-env": "^7.26.2",
    "@babel/preset-react": "^7.26.3", 
    "@babel/preset-typescript": "^7.26.0",
    "@eslint/js": "^9.17.0",
    "@next/eslint-plugin-next": "^15.3.2",
    "@tailwindcss/postcss": "^4.1.7",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^29.7.0",
    "eslint": "^9.27.0",
    "eslint-config-next": "^15.3.2",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "firebase-tools": "^14.4.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.0.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.7", 
    "typescript": "^5.8.3"
  },
  "main": "jest.config.js",
  "directories": {
    "test": "tests"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
